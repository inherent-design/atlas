{
  "name": "@inherent.design/atlas-core",
  "version": "0.1.0",
  "description": "Core library for Atlas semantic memory - embeddings, storage, search",
  "module": "src/index.ts",
  "type": "module",
  "engines": {
    "bun": ">=1.2.15"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/**/*.ts",
    "!src/**/*.test.ts"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./domain/*": "./src/domain/*/index.ts",
    "./services/*": "./src/services/*/index.ts",
    "./shared/*": "./src/shared/*.ts"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/picomatch": "^4.0.2",
    "@vitest/coverage-v8": "^4.0.16",
    "happy-dom": "^20.0.11",
    "picomatch": "^4.0.3",
    "prettier": "^3.7.4",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@langchain/textsplitters": "^1.0.1",
    "@lingui/core": "^5.7.0",
    "@qdrant/js-client-rest": "^1.16.2",
    "p-limit": "^7.2.0",
    "p-map": "^7.0.4",
    "p-retry": "^7.1.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "voyageai": "^0.1.0"
  }
}
